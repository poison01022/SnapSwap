                        android:layout_height="wrap_content"/>

                    <Button
                        android:id="@+id/btnComment3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Comment"
                        android:textColor="@android:color/white"
                        android:background="@drawable/roundedbutton"
                        android:onClick="expandComments"/>

                    <EditText
                        android:id="@+id/commentBox3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Type your comment here"
                        android:textColorHint="@color/my_secondary"
                        android:textColor="@color/white"
                        android:backgroundTint="#E6E0E0" />

                    <TextView
                        android:id="@+id/commentCount4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:layout_marginLeft="8dp"/>

                </LinearLayout>

            </LinearLayout>













            <!-- Add more photos with like and comment buttons here -->

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btnSkip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SNAP        SWAP"
            android:textColor="@android:color/white"
            android:background="@drawable/roundedbutton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"/>

    </LinearLayout>

</RelativeLayout>
