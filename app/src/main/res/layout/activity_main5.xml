                    <Button
                        android:id="@+id/btnComment1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Comment"
                        android:textColor="@android:color/white"
                        android:background="@drawable/roundedbutton"
                        android:onClick="expandComments"/>

                    <EditText
                        android:id="@+id/commentBox1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Type your comment here"
                        android:textColorHint="@color/my_secondary"
                        android:textColor="@color/white"
                        android:backgroundTint="#E6E0E0" />

                    <TextView
                        android:id="@+id/commentCount2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:layout_marginLeft="8dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:src="@drawable/image_8"
                    android:scaleType="fitCenter"/>

                <LinearLayout
                    android:layout_width="match_parent"
